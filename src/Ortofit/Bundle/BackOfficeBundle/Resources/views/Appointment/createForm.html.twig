<!-- Modal -->

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Запись на прием</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="inputMsisdn" class="col-sm-2 control-label">Телефон:</label>

                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <input type="text" class="form-control" id="msisdn" data-mask=""
                                       data-inputmask="'mask': '(99) 999-999-99-99'" placeholder="(38) 067-359-42-88" value=""/>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputName" class="col-sm-2 control-label">Имя:</label>

                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>
                                <input type="text" class="form-control" id="clientName" placeholder="Имя Клиента"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="selectDirectionId" class="col-sm-2 control-label">Источник:</label>

                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-arrow-right"></i>
                                </div>
                                <select class="form-control" id="directionId">
                                    <option value="1">Интернет</option>
                                    <option value="2">Наружная реклама</option>
                                    <option value="3">Знакомые</option>
                                    <option value="4">Повторно</option>
                                </select>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="selectOfficeId" class="col-sm-2 control-label">Офис:</label>

                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-building"></i>
                                </div>
                                <select class="form-control" id="officeId">
                                    <option value="1">Кирова</option>
                                    <option value="2">Центр</option>
                                </select>
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputDate" class="col-sm-2 control-label">Дата:</label>

                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input id="date" class="form-control pull-right active" type="text" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask placeholder="{{ "now"|date("m/d/Y") }}">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputTime" class="col-sm-2 control-label">Время:</label>

                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                                <input id="time" class="form-control pull-right active" type="text" data-inputmask="'alias': 'hh/mm'" data-mask placeholder="{{ "now"|date("H:i") }}">

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputDuration" class="col-sm-2 control-label">Прием:</label>

                        <div class="col-sm-10">
                            <div class="input-group">
                                <label class="checkbox-inline"><input name="duration" id="duration" type="radio" value="30" />30 мин</label>
                                <label class="checkbox-inline"><input name="duration" id="duration" type="radio" value="60" checked="checked" />1 час</label>
                                <label class="checkbox-inline"><input name="duration" id="duration" type="radio" value="120" />2 часа</label>

                            </div>
                        </div>
                    </div>
                    <script type="text/javascript">
//                        $(function () {
//
//                            $('#reservationtime').datetimepicker();
//                        });
                    </script>

                    <div class="form-group">
                        <label for="textareaDescription" class="col-sm-2 control-label">Цель:</label>

                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3" id="description"></textarea>
                        </div>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" id="saveButton">Сохранить</button>
            </div>
        </div>
    </div>
